<%- include layouts/header.ejs %>

<div class="page-data">

    <form method="post" action="/purchases/add">
        <table cellpadding="11">
            <tr>
                <td class="label">Customer-ID</td><td>: <input type="text" name="id" required></td>
            </tr>
            <tr>
                <td class="label" valign="top">Product-Id</td><td valign="top">: <input type="text" name="product_id" ></td>
            </tr>
            <tr>
                <td class="label valign="top">Date</td><td valign="top">: <input type="date" name="purchase_date" placeholder="YYYY-MM-DD" "title="Enter a date in this formart YYYY-MM-DD"/></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    &nbsp; <input type="submit" name="submit" value="Save">
                    <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                </td>
            </tr>
        </table>
    </form>

</div>

