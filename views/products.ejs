<%- include layouts/header.ejs %>

<div class="page-data">
    <div class="data-btn">
        <button onClick="addProduct()">+ Add</button>
    </div>
    <div class="data-table">
        <table border="1" cellpadding="7" cellspacing="7">
            <tr>
                <th width="50px">No</th>
                <th>Product Id</th>
                <th>Name</th>
                <th>Rate</th>
                <th width="120px">Action</th>
            </tr>

            <% if(data.length){

            for(var i = 0;i < data.length;i++) { %>

            <tr>
                <td><%=(i+1)%></td>
                <td><%=data[i].product_id%></td>
                <td><%=data[i].product_name%></td>
                <td><%=data[i].product_rate%></td>
                <td>
                    <a class="a-inside edit" href="../products/edit/<%=data[i].id%>">Edit</a>

                    <a class="a-inside delete" href="../products/delete/<%=data[i].id%>">Delete</a>

                </td>
            </tr>
            <% }

            }else{ %>
            <tr>
                <td colspan="3">No Products</td>
            </tr>
            <% } %>



        </table>
    </div>
</div>

