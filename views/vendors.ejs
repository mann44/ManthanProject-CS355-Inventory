<%- include layouts/header.ejs %>

<div class="page-data">
    <div class="data-btn">
        <button onClick="addVendors()">+ Add</button>
    </div>
    <div class="data-table">
        <table border="1" cellpadding="7" cellspacing="7">
            <tr>
                <th width="50px">No</th>
                <th>Vendor Id</th>
                <th>Vendor's Name</th>
                <th>Vendor's Address</th>
                <th>Vendor's Phone</th>
                <th width="120px">Action</th>
            </tr>

            <% if(data.length){

            for(var i = 0;i < data.length;i++) { %>

            <tr>
                <td><%=(i+1)%></td>
                <td><%=data[i].vendor_id%></td>
                <td><%=data[i].vendor_name%></td>
                <td><%=data[i].vendor_address%></td>
                <td><%=data[i].vendor_phone%></td>
                <td>
                    <a class="a-inside edit" href="../vendors/edit/<%=data[i].vendor_id%>">Edit</a>

                    <a class="a-inside delete" href="../vendors/delete/<%=data[i].vendor_id%>">Delete</a>

                </td>
            </tr>
            <% }

            }else{ %>
            <tr>
                <td colspan="3">No vendors</td>
            </tr>
            <% } %>



        </table>
    </div>
</div>

